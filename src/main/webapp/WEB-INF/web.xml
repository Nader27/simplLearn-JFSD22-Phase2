        <url-pattern>/updateUserPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/editUserPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/updateUser</url-pattern>
    </servlet-mapping>
    <!--endregion -->

    <!-- region  CourseController-->
