    <!-- region  AuthController-->
    <servlet>
        <servlet-name>AuthController</servlet-name>
        <servlet-class>com.vodafone.learner_academy.controller.AuthController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/myAccount</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
